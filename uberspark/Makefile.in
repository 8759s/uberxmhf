include ./uberspark-common.mk


###### paths

export USPARK_DIR := $(realpath $(dir $(lastword $(MAKEFILE_LIST))))
export USPARK_HWMDIR := $(USPARK_DIR)/hwm
export USPARK_INCLUDEDIR := $(USPARK_DIR)/include
export USPARK_TOOLSDIR := $(USPARK_DIR)/tools


###### targets

.PHONY: all
all: build-tools


.PHONY: build-tools
build-tools:
	cd $(USPARK_TOOLSDIR) && $(OCAMLC) -o ubersparkconfig unix.cma ubersparkconfig.ml
	cd $(USPARK_TOOLSDIR) && $(RM) umfcommon.cmi umfcommon.cmo umfcommon.cmt umfcommon.cmx umfcommon.o
	cd $(USPARK_TOOLSDIR)/umf && $(MAKE) -w all
	cd $(USPARK_TOOLSDIR) && $(RM) umfcommon.cmi umfcommon.cmo umfcommon.cmt umfcommon.cmx umfcommon.o
